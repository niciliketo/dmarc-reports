<% content_for :page_title do %>
   <%= @report.org_name %>
<% end %>
<% [:email, :extra_contact_info, :report_id, :begin, :end].each do |column| %>
  <%= render(MetricComponent.new(title: Report.human_attribute_name(column), icon: 'fa-tasks', value: @report[column])) %>
<% end %>

<%= render(CardComponent.new(title: Record.model_name.human(count: @report.records), width: :full)) do %>
  <%= render(TableComponent.new(columns: [:source_ip, :dkim, :spf, :type, :comment, :header_from, :dkim_domain, :dkim_result, :dkim_hresult, :spf_domain, :spf_result, :count, :disposition, :reason_type, :reason_comment] , data: @report.records)) %>
<% end %>


